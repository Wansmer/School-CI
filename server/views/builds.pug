-var buildList= data
-var statusList = statuses

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/style.css")
    title School CI server: Build History
  body.Page
    header.Header.Page-Header
      .Header-Inner.Container
        h1.Header-Title.Header-Title_color_deep
          a.Header-Title-Link(href="#") philip1967/my-awesome-repo
        button.Button.Button_icon_left.Icon_build.Button_size_m.Button_type_control.Button_icon.Header-Button
          span.Button-Text Run build
        a.Button.Button_text_hidden.Button_icon_left.Icon_gear.Button_size_m.Button_type_control.Button_icon.Header-Button(href="/settings.html")
    section.Content.Page-Content
      .Content-Inner.Container
        .TicketList
          -for (let item of buildList)
            .Ticket(class= statusList[item.status])
              .Ticket-Info
                .Ticket-Summary
                  span.Ticket-Number= '#' + item.buildNumber
                  span.Ticket-Title= item.commitMessage
                .Ticket-Owner
                  .Ticket-Tech
                    a.Link.Icon_branch.Link_icon_left.Ticket-Branch(href="#")= item.branchName
                    a.Link.Link_color_dark.Ticket-Hash(href="#")= item.commitHash
                  a.Link.Icon_commiter.Link_icon_left.Ticket-Commiter(href="#")= item.authorName
              .Ticket-Meta.Ticket-Meta_position_right
                a.Link.Icon_date.Link_icon_left.Link_color_dark.Ticket-Date(href="#")
                  time(datetime= item.start)
                    | 21 янв, 03:06
                a.Link.Icon_duration.Link_icon_left.Link_color_dark.Ticket-Duration(href="#")
                  time(datetime="")
                    | 1 ч 20 мин
          button.Button.TicketList-Button.Button_size_m.Button_type_control
            span.Button-Text Show more
    footer.Footer.Page-Footer
      .Footer-Inner.Container
        nav.Footer-Nav
          a.Link.Link_color_secondary(href="#") Support
          a.Link.Link_color_secondary(href="#") Learning
        .Footer-Copyright © 2020 Your Name
